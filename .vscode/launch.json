{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug C/C++",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "preLaunchTask": "CMake: build",
            "windows": {
                "type": "cppvsdbg"
            },
            "linux": {
                "type": "cppdbg",
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
            "osx": {
                "type": "cppdbg",
                "MIMode": "lldb"
            }
        }
    ]
}
